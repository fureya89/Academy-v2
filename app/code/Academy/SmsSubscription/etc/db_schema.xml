<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sms_subscription">
        <column xsi:type="int" name="subscription_id" padding="11" unsigned="false" nullable="false" identity="true" comment="Subscription ID"/>
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="false" comment="User ID"/>
        <column xsi:type="varchar" name="phone" nullable="false" length="50" comment="Phone number"/>
        <column xsi:type="varchar" name="subscription_status" nullable="false" length="255" comment="Subscription status"/>
        <column xsi:type="datetime" name="subscription_start" nullable="true" comment="Date and hour when subscription was send"/>
        <column xsi:type="datetime" name="subscription_end" nullable="true" comment="Date and hour when subscription was updated"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="subscription_id" />
        </constraint>
        <constraint xsi:type="foreign" referenceId="SMS_SUBSCRIPTION_USER_ID_CUSTOMER_ENTT_ENTT_ID" table="sms_subscription" column="entity_id" referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>
</schema>



